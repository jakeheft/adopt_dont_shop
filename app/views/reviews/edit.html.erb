<%= form_tag "/shelters/#{@review.shelter_id}/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %>
  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %>
  <%= label_tag :rating %>
  <%= number_field_tag :rating, @review.rating %>
  <%= label_tag :image %>
  <%= text_field_tag :image, @review.image %>
  <%= label_tag :username %>
  <%= text_field_tag :username, @review.user.name %>

  <%= submit_tag 'Update Review' %>
<% end %><br>

<% flash.each do |type, msg| %>
<div>
  <%= msg %>
</div>
<% end %>
