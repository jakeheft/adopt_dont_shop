<h1><%= "Pets at #{@shelter.name}" %></h1>
<h3><%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %></h3><br>

<% shelter_pets = @pets.select do |pet| %>
  <% pet.shelter == @shelter %>
<% end %>
<% shelter_pets.each do |pet| %>
  <img src="<%= pet.image %>" style="height:250px; width:300px;">
  <p><%= pet.name %></p>
  <p><%= pet.description %></p>
  <p><%= pet.age %></p>
  <p><%= pet.sex %></p>
  <p><%= pet.status %></p>
<% end %>
