<form action="/shelters" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>New Shelter</p>
  <label for="shelter[name]">Name:</label>
  <input type="text" name="shelter[name]"/><br/>
  <label for="shelter[address]">Address:</label>
  <input type="text" name="shelter[address]"/><br/>
  <label for="shelter[city]">City:</label>
  <input type="text" name="shelter[city]"/><br/>
  <label for="shelter[state]">State:</label>
  <input type="text" name="shelter[state]"/><br/>
  <label for="shelter[zip]">Zip Code:</label>
  <input type="text" name="shelter[zip]"/><br/>
  <input type="submit" value="Create Shelter"/>
</form>
