<h1><%= @pet.name.capitalize %></h1>
<img src="<%= @pet.image %>" style="height:250px; width:300px;">
<p><%= "Name: #{@pet.name.capitalize}" %></p>
<p><%= "Description: #{@pet.description}" %></p>
<p><%= "Age: #{@pet.age}" %></p>
<p><%= "Sex: #{@pet.sex}" %></p>
<p><%= "Adoption Status: #{@pet.status}" %></p>
<%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>

<%= link_to "View Applicants for #{@pet.name.capitalize}", "/pets/#{@pet.id}/applications" %>
