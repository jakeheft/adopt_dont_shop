<h1>Pets</h1>

<% @pets.each do |pet| %>
  <img src="<%= pet.image %>" alt="Cosmo the dog yawning" style="height:250px; width:300px;">
  <p><%= "Name: #{pet.name.capitalize}" %></p>
  <p><%= "Approximate Age: #{pet.age}" %></p>
  <p><%= "Sex: #{pet.sex}" %></p>
  <p><%= "Shelter: #{pet.shelter.name}" %></p>
<% end %>
