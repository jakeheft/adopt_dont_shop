<h1><%= "Update #{@pet.name}" %></h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :image %>
  <%= text_field_tag :pet_image, "#{@pet.image}" %><br>
  <%= label_tag :name %>
  <%= text_field_tag :pet_name, "#{@pet.name}" %><br>
  <%= label_tag :description %>
  <%= text_field_tag :pet_description, "#{@pet.description}" %><br>
  <%= label_tag :approximate_Age %>
  <%= text_field_tag :pet_age, "#{@pet.age}" %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :pet_sex, "#{@pet.sex}" %><br>

  <%= submit_tag "Update Pet" %>
<% end %>
