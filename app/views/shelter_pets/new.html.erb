<header>
  <a href="/pets">Go to Pets</a>
  <a href="/shelters">Go to Shelters</a>
</header>

<%= form_tag "/shelters/#{@shelter.id}/pets", method: :post do %>
  <%= label_tag :image %>
  <%= text_field_tag :pet_image %><br>
  <%= label_tag :name %>
  <%= text_field_tag :pet_name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :pet_description %><br>
  <%= label_tag :approximate_Age %>
  <%= text_field_tag :pet_age %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :pet_sex %><br>

  <%= submit_tag 'Create Pet' %>
<% end %>
