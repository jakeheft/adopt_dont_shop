
<%= form_tag path do %>
  <p><%= label_tag :name %></p>
  <%= text_field_tag :name %>
  <p><%= label_tag :address %></p>
  <%= text_field_tag :address %>
  <p><%= label_tag :city %></p>
  <%= text_field_tag :city %>
  <p><%= label_tag :state %></p>
  <%= text_field_tag :state %>
  <p><%= label_tag :zip %></p>
  <%= text_field_tag :zip %>

  <div><%= submit_tag submit_text %></div>
<% end %>
