<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to 'Go to Shelters', '/shelters' %>
      <%= link_to 'Go to Pets', '/pets' %>
      <%= link_to 'Create an Application', '/applications/new' %>
      <%= link_to 'Create a User', '/users/new' %>
    </header>

    <%= yield %>
    <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
    <% end %>
  </body>
</html>
